{
	"name": "raindrop-sync-chrome",
	"version": "0.2.2",
	"author": {
		"name": "Yuchan Lee",
		"url": "https://github.com/lasuillard",
		"email": "lasuillard@gmail.com"
	},
	"homepage": "https://github.com/lasuillard/raindrop-sync-chrome",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:watch": "vite build --watch",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "pnpm run check -- --watch",
		"test": "vitest --config vitest.config.ts --coverage --run",
		"test:watch": "vitest --config vitest.config.ts --silent --coverage --watch --ui",
		"e2e": "vitest --config vitest.config.e2e.ts --run",
		"e2e:watch": "concurrently --raw --kill-others --kill-signal SIGKILL \"pnpm run build:watch\" \"wait-on --delay 3000 --timeout 15000 dist/manifest.json && vitest --silent --config vitest.config.e2e.ts --watch --ui\""
	},
	"devDependencies": {
		"@crxjs/vite-plugin": "2.0.0-beta.19",
		"@floating-ui/dom": "^1.5.3",
		"@sveltejs/vite-plugin-svelte": "^2.5.3",
		"@testing-library/svelte": "^4.0.5",
		"@tsconfig/svelte": "^5.0.2",
		"@types/chrome": "^0.0.237",
		"@types/sinon-chrome": "^2.2.15",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"@vitest/coverage-v8": "^0.34.6",
		"@vitest/ui": "^0.34.7",
		"autoprefixer": "^10.4.16",
		"axios": "^1.6.2",
		"axios-cache-interceptor": "^1.3.2",
		"concurrently": "^8.2.2",
		"crx": "^5.0.1",
		"eslint": "^8.55.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-jsdoc": "^46.9.0",
		"eslint-plugin-svelte": "^2.35.1",
		"flowbite": "^2.2.0",
		"flowbite-svelte": "^0.44.20",
		"flowbite-svelte-icons": "^0.4.5",
		"jsdom": "^23.0.1",
		"postcss": "^8.4.32",
		"prettier": "^3.1.0",
		"prettier-plugin-svelte": "^3.1.2",
		"prettier-plugin-tailwindcss": "^0.5.9",
		"puppeteer": "^21.6.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"sinon-chrome": "^3.0.1",
		"svelte": "^4.2.8",
		"svelte-check": "^3.6.2",
		"tailwind-merge": "^2.1.0",
		"tailwindcss": "^3.3.6",
		"tiny-glob": "^0.2.9",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^4.5.1",
		"vite-plugin-node-polyfills": "^0.17.0",
		"vitest": "^0.34.6",
		"wait-on": "^7.2.0"
	},
	"type": "module"
}
