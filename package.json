{
	"name": "raindrop-sync-chrome",
	"version": "0.4.3",
	"author": {
		"name": "Yuchan Lee",
		"url": "https://github.com/lasuillard",
		"email": "lasuillard@gmail.com"
	},
	"homepage": "https://github.com/lasuillard/raindrop-sync-chrome",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:watch": "vite build --watch",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "yarn run check -- --watch",
		"test": "vitest --coverage --run --exclude tests/e2e",
		"test:watch": "vitest --silent --coverage --watch --ui --exclude tests/e2e",
		"e2e": "yarn run build && E2E=1 vitest --run e2e",
		"e2e:watch": "concurrently --raw --kill-others --kill-signal SIGKILL \"yarn run build:watch\" \"wait-on --delay 30000 --timeout 30000 dist/manifest.json && E2E=1 vitest --silent --watch --ui e2e\""
	},
	"dependencies": {
		"@lasuillard/raindrop-client": "^0.6.1",
		"autoprefixer": "^10.4.16",
		"axios": "^1.7.4",
		"axios-cache-interceptor": "^1.6.0",
		"flowbite": "^3.1.1",
		"flowbite-svelte": "^0.48.4",
		"flowbite-svelte-icons": "^2.0.2",
		"postcss": "^8.5.1",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"svelte": "^5.19.6",
		"tailwind-merge": "^2.6.0",
		"tailwindcss": "^3.3.6",
		"vite": "^6.0.9",
		"vite-plugin-node-polyfills": "^0.23.0"
	},
	"devDependencies": {
		"@codecov/vite-plugin": "^1.8.0",
		"@crxjs/vite-plugin": "2.0.0-beta.28",
		"@eslint/eslintrc": "^3.2.0",
		"@eslint/js": "^9.19.0",
		"@floating-ui/dom": "^1.5.3",
		"@sveltejs/vite-plugin-svelte": "^5.0.1",
		"@testing-library/svelte": "^5.2.0",
		"@tsconfig/svelte": "^5.0.2",
		"@types/chrome": "^0.0.287",
		"@types/sinon-chrome": "^2.2.15",
		"@typescript-eslint/eslint-plugin": "^8.22.0",
		"@typescript-eslint/parser": "^8.22.0",
		"@vitest/coverage-v8": "^3.0.4",
		"@vitest/ui": "^3.0.4",
		"concurrently": "^9.0.1",
		"dotenv": "^16.4.5",
		"eslint": "^9.19.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-jsdoc": "^50.6.0",
		"eslint-plugin-svelte": "^2.44.1",
		"globals": "^15.14.0",
		"happy-dom": "^16.8.1",
		"prettier": "^3.4.1",
		"prettier-plugin-svelte": "^3.3.2",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"puppeteer": "^24.1.1",
		"sinon-chrome": "^3.0.1",
		"svelte-check": "^4.1.0",
		"tiny-glob": "^0.2.9",
		"tslib": "^2.7.0",
		"typescript": "^5.7.2",
		"vitest": "^3.0.0-beta.2",
		"wait-on": "^8.0.0"
	},
	"type": "module"
}
