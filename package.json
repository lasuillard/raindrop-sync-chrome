{
	"name": "raindrop-sync-chrome",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"build:watch": "vite build --watch",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "npm run check -- --watch",
		"test": "VITEST_ENV=unit vitest --coverage --run tests",
		"test:watch": "VITEST_ENV=unit vitest --coverage --watch --ui tests",
		"e2e": "VITEST_ENV=e2e vitest --coverage --run e2e",
		"e2e:watch": "concurrently --raw --kill-others --kill-signal SIGKILL \"npm run build:watch\" \"wait-on --delay 3000 --timeout 15000 dist/manifest.json && VITEST_ENV=e2e VITEST_ENV=e2e VITE_BUILD_OUTDIR=./.tmp/dist vitest --coverage --watch --ui e2e\""
	},
	"devDependencies": {
		"@crxjs/vite-plugin": "^2.0.0-beta.18",
		"@floating-ui/dom": "^1.4.5",
		"@sveltejs/vite-plugin-svelte": "^2.4.2",
		"@testing-library/svelte": "^4.0.3",
		"@tsconfig/svelte": "^5.0.0",
		"@types/chrome": "^0.0.237",
		"@types/express": "^4.17.17",
		"@types/pouchdb": "^6.4.0",
		"@types/pouchdb-core": "^7.0.11",
		"@types/sinon-chrome": "^2.2.11",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"@vitest/coverage-v8": "^0.32.4",
		"@vitest/ui": "^0.32.2",
		"autoprefixer": "^10.4.14",
		"axios": "^1.4.0",
		"concurrently": "^8.2.0",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-jsdoc": "^46.5.0",
		"eslint-plugin-svelte": "^2.26.0",
		"flowbite": "^1.7.0",
		"flowbite-svelte": "^0.40.1",
		"flowbite-svelte-icons": "^0.2.6",
		"jsdom": "^22.1.0",
		"postcss": "^8.4.24",
		"pouchdb": "^8.0.1",
		"pouchdb-find": "^8.0.1",
		"prettier": "^3.0.0",
		"prettier-plugin-svelte": "^3.0.0",
		"puppeteer": "^20.7.4",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"sinon-chrome": "^3.0.1",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"tailwind-merge": "^1.14.0",
		"tailwindcss": "^3.3.2",
		"tiny-glob": "^0.2.9",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0, <5.2.0",
		"vite": "^4.3.0",
		"vite-plugin-node-polyfills": "^0.9.0",
		"vitest": "^0.34",
		"wait-on": "^7.0.1"
	},
	"type": "module"
}
